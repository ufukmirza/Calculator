<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/showNumber"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:background="@color/colorPrimary"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="80dp"
        android:paddingRight="30dp"
        android:paddingBottom="30dp"
        android:text="0"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonclear"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="C"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonbtackets"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="( )"
                android:textColor="@android:color/holo_green_light"
                android:textColorHighlight="@android:color/holo_green_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonper"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="%"
                android:textColor="@android:color/holo_green_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonsplit"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="รท"
                android:textColor="@android:color/holo_green_light"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonx"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="x"
                android:textColor="@android:color/holo_green_light"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonminus"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="-"
                android:textColor="@android:color/holo_green_light"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonplus"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="+"
                android:textColor="@android:color/holo_green_light"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonartieksi"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="+/-"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button0"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text="0"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttondat"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenar"
                android:onClick="buttonclick"
                android:text=","
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonequal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/kenaresittir"
                android:onClick="buttonclick"
                android:text="="
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

        </TableRow>

    </TableLayout>
</LinearLayout>